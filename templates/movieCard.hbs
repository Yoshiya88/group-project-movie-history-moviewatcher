
{{#each movie}}
<div data-movie-id="{{id}}" class="col-md-4"><!-- creates row of three cards -->
	<div class="col-md-12 movie-card"><!-- inside card so there is auto margin -->
		<div class="row"><!-- row for poster and movie info -->
			<div class="col-md-5 poster"></div><!-- poster -->
			<div class="col-md-7 movie-info"><!-- movie info -->
				<h3>{{title}}</h3>
				<p>{{year}}r</p>
        {{#each actor}}
				<p>{{this}}</p>
        {{/each}}
				<div class="starsNstuff" data-watched-status="{{watched}}">
          {{#if watched status = true}}
            <ul>
              <li id="1">Star</li>
              <li id="2">Star</li>
              <li id="3">Star</li>
              <li id="4">Star</li>
              <li id="5">Star</li>
            </ul>
          {{#if watched status = false}}
            <a id="watched-it" href="#">Watched It</a>
          {{else watched status not there}}
            <a id="add-watchlist" href="#">Add to Watchlist</a>
          {{/if}}
        </div><!-- area for stars and links -->
			</div><!-- /.col-sm-7 -->
		</div><!-- /.row -->
	</div><!-- /.col-sm-12 -->
</div><!-- /.col-sm-5 -->
{{/each}}